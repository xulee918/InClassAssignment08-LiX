<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/country_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/australia"
        />

    <TextView
        android:id="@+id/question_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/country_image"
        android:text="@string/australia"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/country_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_country"
        android:layout_toRightOf="@+id/country_image"
        android:text="@string/question_australia"
        android:textSize="18sp"/>

        <TextView
            android:id="@+id/question_isTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/australia_true"
            android:layout_below="@+id/question_country"
            android:textSize="1sp" />


</RelativeLayout>

</android.support.v7.widget.CardView>